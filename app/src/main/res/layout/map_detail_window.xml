<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardBackgroundColor="@color/androidGrey800">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtvDetailWindowDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="31 Jan 2018 10:45"/>

        <TextView
            android:id="@+id/txtvDetailWindowName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Weylin Renison"/>

        <TextView
            android:id="@+id/txtvDetailWindowNoOfResponders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Responders: 10"/>

        <TextView
            android:id="@+id/txtvDetailWindowDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="No Details"/>

        <TextView
            android:id="@+id/txtvDetailWindowAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:text="Maasdam Street, Sonkring, Cape Town, Western Province"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fabDetailWindowRespond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_respond"
                    fab:fab_size="mini"
                    fab:fab_colorNormal="@color/SeaGreen"
                    fab:fab_colorPressed="@color/SeaGreen"
                    fab:fab_colorRipple="@color/Jade"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fabDetailWindowCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_call_2"
                    fab:fab_size="mini"
                    fab:fab_colorNormal="@color/SeaGreen"
                    fab:fab_colorPressed="@color/SeaGreen"
                    fab:fab_colorRipple="@color/Jade"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fabDetailWindowChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chat"
                    fab:fab_size="mini"
                    fab:fab_colorNormal="@color/SeaGreen"
                    fab:fab_colorPressed="@color/SeaGreen"
                    fab:fab_colorRipple="@color/Jade"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/txtvDetailWindowRespond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Respond"/>

            <TextView
                android:id="@+id/txtvDetailWindowCall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Call"/>

            <TextView
                android:id="@+id/txtvDetailWindowChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Chat"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>