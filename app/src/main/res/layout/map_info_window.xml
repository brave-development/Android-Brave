<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/cvInfoWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp"
        card_view:cardBackgroundColor="@color/androidGrey800">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/btnInfoWindowCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_call_2"
                fab:fab_size="mini"
                fab:fab_colorNormal="@color/SeaGreen"
                fab:fab_colorPressed="@color/Jade"
                fab:fab_colorRipple="@color/Jade"/>

            <TextView
                android:id="@+id/txtvInfoWindowName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Jhon Doe"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/btnInfoWindowInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/ic_info"
                fab:fab_size="mini"
                fab:fab_colorNormal="@color/SeaGreen"
                fab:fab_colorPressed="@color/Jade"
                fab:fab_colorRipple="@color/Jade"/>

        </LinearLayout>

        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center|bottom"-->
            <!--android:src="@drawable/ic_call"-->
            <!--android:layout_marginBottom="-10dp"/>-->

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cvInfoWindow"
        android:textSize="50sp"
        android:textColor="@color/androidGrey800"
        android:text="â–¼"/>

</RelativeLayout>