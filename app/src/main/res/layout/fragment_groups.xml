<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srLayGroups"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.yayandroid.parallaxrecyclerview.ParallaxRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/famMenuGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="@color/SeaGreen"
        fab:menu_colorPressed="@color/Jade"
        fab:menu_colorRipple="@color/Jade"
        fab:menu_fab_size="normal"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="@color/White"
        fab:menu_labels_textSize="15sp"
        fab:menu_labels_colorNormal="@color/androidGrey800"
        fab:menu_labels_colorPressed="@color/SeaGreen"
        fab:menu_labels_colorRipple="@color/Jade"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="@color/androidGrey800"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="4dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabJoinComGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_join_com_group"
            fab:fab_size="mini"
            fab:fab_label="@string/fabJoinComGroup"
            fab:fab_colorNormal="@color/SeaGreen"
            fab:fab_colorPressed="@color/Jade"
            fab:fab_colorRipple="@color/Jade"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabJoinPrivateGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lock_closed"
            fab:fab_size="mini"
            fab:fab_label="@string/fabJoinPrivateGroup"
            fab:fab_colorNormal="@color/SeaGreen"
            fab:fab_colorPressed="@color/Jade"
            fab:fab_colorRipple="@color/Jade"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabCreateGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_new_group"
            fab:fab_size="mini"
            fab:fab_label="@string/fabCreateGroup"
            fab:fab_colorNormal="@color/SeaGreen"
            fab:fab_colorPressed="@color/Jade"
            fab:fab_colorRipple="@color/Jade"/>

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>